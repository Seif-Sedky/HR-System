@page
@model Milestone3.Pages.Employee.IndexModel
@{
    ViewData["Title"] = "Employee Dashboard";
}

<style>
    :root {
        --gradient-primary: linear-gradient(135deg, #1e2fa3 0%, #3a226d 100%);
        /* CHANGED: Made success a gradient */
        --gradient-success: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --gradient-danger: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%);
        --gradient-warning: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        /* CHANGED: Made info a gradient */
        --gradient-info: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
        --shadow-md: 0 4px 16px rgba(0,0,0,0.12);
        --shadow-lg: 0 8px 24px rgba(0,0,0,0.15);
    }

    .modern-dashboard {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .welcome-header {
        background: var(--gradient-primary);
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
        position: relative;
        overflow: hidden;
    }

        .welcome-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

    .welcome-title {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        position: relative;
    }

    .role-badge {
        display: inline-block;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        padding: 0.4rem 1rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        color: white;
        margin-left: 1rem;
    }

    .employee-meta {
        color: rgba(255, 255, 255, 0.95);
        font-size: 0.95rem;
        margin-top: 0.75rem;
        position: relative;
    }

        .employee-meta i {
            margin: 0 0.5rem 0 1rem;
        }

            .employee-meta i:first-child {
                margin-left: 0;
            }

    .balance-card {
        background: white;
        border-radius: 16px;
        padding: 1.75rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

        .balance-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
        }

    .balance-label {
        font-size: 0.813rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #6c757d;
        margin-bottom: 0.75rem;
    }

    .balance-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2d3748;
        margin: 0;
    }

        .balance-value small {
            font-size: 1rem;
            font-weight: 500;
            color: #a0aec0;
            margin-left: 0.5rem;
        }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2d3748;
        margin: 2.5rem 0 1.5rem;
        position: relative;
        padding-left: 1rem;
    }

        .section-title::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 24px;
            background: var(--gradient-primary);
            border-radius: 2px;
        }

    .action-card {
        background: white;
        border-radius: 16px;
        padding: 2rem 1.5rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
        text-decoration: none;
        display: block;
        position: relative;
        overflow: hidden;
    }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: currentColor;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .action-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--shadow-lg);
            text-decoration: none;
        }

            .action-card:hover::before {
                opacity: 1;
            }

        .action-card.primary {
            color: #667eea;
        }

        .action-card.danger {
            color: #ee0979;
        }

        .action-card.warning {
            color: #f093fb;
        }

        .action-card.success {
            color: #11998e;
        }

        .action-card.info {
            color: #4facfe;
        }

    .action-icon {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.25rem;
        font-size: 2rem;
        position: relative;
    }

        .action-icon::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 16px;
            background: currentColor;
            opacity: 0.1;
            z-index: 0;
        }

        .action-icon i {
            position: relative;
            z-index: 1;
            color: currentColor;
        }

    .action-title {
        font-size: 1.125rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .action-description {
        font-size: 0.875rem;
        color: #718096;
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .action-button {
        width: 100%;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.875rem;
        border: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: white;
    }

    .action-card.primary .action-button {
        background: var(--gradient-primary);
    }

    .action-card.danger .action-button {
        background: var(--gradient-danger);
    }

    .action-card.warning .action-button {
        background: var(--gradient-warning);
    }

    .action-card.success .action-button {
        background: var(--gradient-success);
    }

    .action-card.info .action-button {
        background: var(--gradient-info);
    }

    .action-button:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow-md);
    }

    .info-panel {
        background: linear-gradient(135deg, #f6f8fb 0%, #e9f0f7 100%);
        border-radius: 16px;
        padding: 2rem;
        border-left: 4px solid #4facfe;
        margin-top: 2.5rem;
    }

    .info-panel-title {
        font-size: 1rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }

        .info-panel-title i {
            margin-right: 0.5rem;
            color: #4facfe;
        }

    .info-panel ul {
        margin: 0;
        padding-left: 1.25rem;
    }

    .info-panel li {
        color: #4a5568;
        margin-bottom: 0.75rem;
        line-height: 1.6;
        font-size: 0.9rem;
    }

        .info-panel li:last-child {
            margin-bottom: 0;
        }

    .info-panel strong {
        color: #2d3748;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .welcome-title {
            font-size: 1.5rem;
        }

        .role-badge {
            display: block;
            margin: 1rem 0 0 0;
            text-align: center;
        }

        .balance-value {
            font-size: 2rem;
        }
    }
</style>

<div class="modern-dashboard">
    <!-- Welcome Header -->
    <div class="welcome-header">
        <h1 class="welcome-title">
            Welcome back, @Model.CurrentEmployee?.FullName
            @if (Model.CurrentEmployee != null)
            {
                <span class="role-badge">@Model.CurrentEmployee.RoleName</span>
            }
        </h1>
        @if (Model.CurrentEmployee != null)
        {
            <div class="employee-meta">
                <i class="bi bi-building"></i>@Model.CurrentEmployee.Department Department
                <i class="bi bi-envelope"></i>@Model.CurrentEmployee.Email
            </div>
        }
    </div>

    <!-- Leave Balance Cards -->
    @if (Model.CurrentEmployee != null)
    {
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="balance-card">
                    <div class="balance-label">Annual Leave Balance</div>
                    <h2 class="balance-value">@Model.CurrentEmployee.AnnualBalance<small>days</small></h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="balance-card">
                    <div class="balance-label">Accidental Leave Balance</div>
                    <h2 class="balance-value">@Model.CurrentEmployee.AccidentalBalance<small>days</small></h2>
                </div>
            </div>
        </div>
    }

    <!-- Main Navigation -->
    <h2 class="section-title">Quick Actions</h2>
    <div class="row g-4 mb-4">

        <div class="col-lg-4 col-md-6">
            <a href="/Employee/MyProfile" class="action-card warning">
                <div class="action-icon">
                    <i class="bi bi-person-vcard-fill"></i>
                </div>
                <h3 class="action-title">My Profile</h3>
                <p class="action-description">View your personal details, employment history and account information</p>
                <button class="action-button">View Profile</button>
            </a>
        </div>

        <div class="col-lg-4 col-md-6">
            <a href="/Employee/ApplyLeave" class="action-card primary">
                <div class="action-icon">
                    <i class="bi bi-calendar-plus-fill"></i>
                </div>
                <h3 class="action-title">Apply for Leave</h3>
                <p class="action-description">Submit annual, medical, unpaid, accidental or compensation leave requests</p>
                <button class="action-button">Apply Now</button>
            </a>
        </div>

        @if (Model.IsUpperboard)
        {
            <div class="col-lg-4 col-md-6">
                <a href="/Employee/ApproveLeaves" class="action-card info">
                    <div class="action-icon">
                        <i class="bi bi-check2-circle"></i>
                    </div>
                    <h3 class="action-title">Approve Leaves</h3>
                    <p class="action-description">Review and approve/reject annual and unpaid leave requests</p>
                    <button class="action-button">View Requests</button>
                </a>
            </div>
        }

        @if (Model.IsDean)
        {
            <div class="col-lg-4 col-md-6">
                <a href="/Employee/EvaluateEmployees" class="action-card success">
                    <div class="action-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <h3 class="action-title">Evaluate Employees</h3>
                    <p class="action-description">Evaluate the employees who work within your department</p>
                    <button class="action-button">Start Evaluation</button>
                </a>
            </div>
        }
    </div>

    <!-- Quick Tips Panel -->
    <div class="info-panel">
        <h3 class="info-panel-title">
            <i class="bi bi-info-circle-fill"></i>
            Quick Tips
        </h3>
        <ul>
            <li><strong>Apply for Leave:</strong> Submit various types of leave requests including annual, medical, unpaid, accidental, and compensation leave</li>
            @if (Model.IsUpperboard)
            {
                <li><strong>Approve Leaves:</strong> Dean/Vice-Dean can approve annual leaves for their department; President can approve for Deans/Vice-Deans</li>
            }
            @if (Model.IsDean)
            {
                <li><strong>Evaluate Employees:</strong> Deans and Vice-Deans can evaluate employees in their department each semester</li>
            }
        </ul>
    </div>
</div>