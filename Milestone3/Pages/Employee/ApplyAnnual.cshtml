@page
@model Milestone3.Pages.Employee.Leaves.ApplyAnnualModel
@{
    ViewData["Title"] = "Apply for Annual Leave";
}

<style>
    /* Custom style for the Cancel button to match the theme's animation */
    .btn-uni-cancel {
        background-color: #f8f9fa;
        color: #6c757d; /* Standard muted text color */
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }

        .btn-uni-cancel:hover {
            background-color: #e9ecef;
            color: #495057; /* Darker text on hover */
            transform: translateY(-2px); /* The "Lift" effect */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <!-- FORM CARD -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <!-- HEADER: Uni Blue Background + Gold Icon -->
                <div class="p-4 text-white text-center position-relative"
                     style="background: linear-gradient(135deg, var(--uni-blue) 0%, #1a2d42 100%);">
                    <div class="mb-2">
                        <!-- Gold Icon for "Vacation" vibe -->
                        <i class="fas fa-plane-departure fa-3x text-uni-gold"></i>
                    </div>
                    <h3 class="fw-bold mb-0">Annual Leave</h3>
                    <p class="mb-0 opacity-75">Submit your official time-off request</p>
                </div>

                <div class="card-body p-5 bg-white">
                    <form method="post">

                        <!-- 1. DATE RANGE ROW -->
                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <label class="form-label small fw-bold text-uni-blue text-uppercase">Start Date</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="fas fa-calendar-alt text-uni-blue"></i>
                                    </span>
                                    <input type="date" asp-for="StartDate" class="form-control border-start-0 ps-0" required />
                                </div>
                            </div>
                            <div class="col-6">
                                <label class="form-label small fw-bold text-uni-blue text-uppercase">End Date</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="fas fa-calendar-check text-uni-blue"></i>
                                    </span>
                                    <input type="date" asp-for="EndDate" class="form-control border-start-0 ps-0" required />
                                </div>
                            </div>
                        </div>

                        <!-- 2. REPLACEMENT SELECTOR -->
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-uni-blue text-uppercase">Replacement Employee</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-user-friends text-uni-gold"></i>
                                </span>
                                <select asp-for="ReplacementId" asp-items="Model.ReplacementOptions" class="form-select border-start-0 ps-0" required>
                                    <option value="" disabled selected>Select a colleague...</option>
                                </select>
                            </div>
                            <div class="form-text small mt-2 text-muted">
                                <i class="fas fa-info-circle me-1 text-uni-blue"></i>
                                This employee will cover your duties while you are away.
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-grid gap-3">
                            <!-- Submit: Green (Success Action) -->
                            <button type="submit" class="btn btn-uni-green shadow-sm py-3 fw-bold rounded-3">
                                <i class="fas fa-paper-plane me-2"></i> Submit Request
                            </button>

                            <!-- Cancel: Custom Scalable Gray -->
                            <a asp-page="/Employee/MyProfile" class="btn btn-uni-cancel py-3 fw-bold rounded-3 text-decoration-none text-center">
                                Cancel
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>