@page
@model Milestone3.Pages.Employee.LoginModel
@{
    ViewData["Title"] = "Employee Login";
}

<div class="login-wrapper">
    <div class="login-card">

        <!-- Header Section -->
        <div class="text-center mb-4">
            <h2 class="text-uni-blue fw-bold">Academic Staff</h2>
            <p class="text-muted">Employee Portal Access</p>
        </div>

        <!-- Error Alert -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert" style="background-color: var(--uni-red); color: white; border:none;">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@Model.Message</div>
            </div>
        }

        <!-- Login Form -->
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Employee ID</label>
                <!-- name="employeeId" matches the OnPost parameter -->
                <input type="number" name="employeeId" class="form-control" placeholder="Enter your ID" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Password</label>
                <input type="password" name="password" class="form-control" placeholder="••••••••" required />
            </div>

            <!-- Using btn-uni-green to match the Academic theme -->
            <button type="submit" class="btn btn-uni-green w-100 py-2 fw-bold shadow-sm">
                Login to Portal
            </button>
        </form>

        <!-- Back Link -->
        <div class="text-center mt-3">
            <a asp-page="/Index" class="text-decoration-none text-muted small">Back to Home</a>
        </div>
    </div>
</div>