@page
@model Milestone3.Pages.hr_employee.Attendance.DeductionsModel
@{
    ViewData["Title"] = "Deduction Management";
}

<div class="container-fluid py-3">
    <!-- Page Header -->
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="text-primary fw-bold mb-1">
                <i class="fas fa-calculator me-2"></i>Deduction Manager
            </h2>
            <p class="text-muted mb-0">Automated payroll penalty processing and analysis.</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- LEFT COLUMN: Control Panel -->
        <div class="col-lg-5 col-xl-4">
            <div class="card border-0 shadow-lg h-100" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-sliders-h me-2"></i>Configuration</h5>
                </div>
                <div class="card-body p-4 bg-light">

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger shadow-sm border-0 mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i> @Model.ErrorMessage
                        </div>
                    }

                    <form method="post" id="runForm">

                        <!-- Step 1: Type -->
                        <div class="mb-4">
                            <label class="form-label text-uppercase fw-bold text-secondary small ls-1">Deduction Type</label>
                            <div class="d-grid gap-2">
                                <input type="radio" class="btn-check" name="SelectedType" id="typeHours" value="Hours" checked>
                                <label class="btn btn-outline-white bg-white text-start p-3 border shadow-sm type-card" for="typeHours">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-info bg-opacity-10 text-info rounded p-2 me-3">
                                            <i class="fas fa-clock fa-lg"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">Missing Hours</div>
                                            <div class="small text-muted"> < 8 hours work duration</div>
                                        </div>
                                    </div>
                                </label>

                                <input type="radio" class="btn-check" name="SelectedType" id="typeDays" value="Days">
                                <label class="btn btn-outline-white bg-white text-start p-3 border shadow-sm type-card" for="typeDays">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded p-2 me-3">
                                            <i class="fas fa-calendar-times fa-lg"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">Missing Days</div>
                                            <div class="small text-muted">Absent without leave</div>
                                        </div>
                                    </div>
                                </label>

                                <input type="radio" class="btn-check" name="SelectedType" id="typeUnpaid" value="Unpaid">
                                <label class="btn btn-outline-white bg-white text-start p-3 border shadow-sm type-card" for="typeUnpaid">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-danger bg-opacity-10 text-danger rounded p-2 me-3">
                                            <i class="fas fa-money-bill-wave fa-lg"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">Unpaid Leave</div>
                                            <div class="small text-muted">Financial deduction</div>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <!-- Step 2: Scope -->
                        <div class="mb-4">
                            <label class="form-label text-uppercase fw-bold text-secondary small ls-1">Target Scope</label>
                            <select asp-for="SelectedScope" class="form-select form-select-lg shadow-sm border-0 fs-6" id="scopeSelect" onchange="toggleInputs()">
                                <option value="All">All Employees</option>
                                <option value="Department">Specific Department</option>
                                <option value="Specific">Specific Employee ID</option>
                            </select>
                        </div>

                        <!-- Step 3: Conditional Inputs -->
                        <div id="dynamicInputs" class="mb-4">
                            <!-- Specific Input -->
                            <div id="input-specific" class="slide-input" style="display:none;">
                                <label class="form-label fw-bold">Enter Employee ID</label>
                                <input asp-for="SpecificEmpId" type="number" class="form-control form-control-lg shadow-sm" placeholder="e.g. 101" />
                            </div>

                            <!-- Department Input -->
                            <div id="input-dept" class="slide-input" style="display:none;">
                                <label class="form-label fw-bold">Select Department</label>
                                <select asp-for="SelectedDept" asp-items="Model.Departments" class="form-select form-select-lg shadow-sm">
                                    <option value="" disabled selected>-- Select --</option>
                                </select>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 my-4">

                        <button type="submit" asp-page-handler="Run" class="btn btn-primary w-100 py-3 fw-bold shadow hover-lift">
                            RUN ANALYSIS <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN: Results Display -->
        <div class="col-lg-7 col-xl-8">
            @if (Model.RunComplete)
            {
                <div class="card border-0 shadow-lg h-100" style="border-radius: 15px;">
                    <div class="card-header bg-success text-white py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold"><i class="fas fa-clipboard-check me-2"></i>Analysis Report</h5>
                        <span class="badge bg-white text-success rounded-pill px-3">Completed</span>
                    </div>
                    <div class="card-body p-0">
                        <!-- Summary Stats -->
                        <div class="row g-0 border-bottom text-center bg-light">
                            <div class="col-6 py-4 border-end">
                                <h2 class="fw-bold text-dark mb-0">@Model.ProcessedCount</h2>
                                <small class="text-uppercase text-muted fw-bold ls-1">Processed</small>
                            </div>
                            <div class="col-6 py-4">
                                <h2 class="fw-bold text-success mb-0">@Model.AppliedCount</h2>
                                <small class="text-uppercase text-muted fw-bold ls-1">Deductions Applied</small>
                            </div>
                        </div>

                        <!-- Detailed Table -->
                        <div class="table-responsive">
                            @if (Model.Results.Count > 0)
                            {
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light text-secondary small text-uppercase">
                                        <tr>
                                            <th class="ps-4 py-3">Employee</th>
                                            <th>Department</th>
                                            <th class="text-end pe-4">Deduction</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var res in Model.Results)
                                        {
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            @res.Name.Substring(0, 1)
                                                        </div>
                                                        <div>
                                                            <div class="fw-bold text-dark">@res.Name</div>
                                                            <div class="small text-muted">ID: @res.EmpId</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-light text-dark border">@res.Dept</span></td>
                                                <td class="text-end pe-4">
                                                    <span class="fw-bold text-danger">-$@res.Amount.ToString("N2")</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <div class="mb-3 text-muted opacity-25">
                                        <i class="fas fa-check-circle fa-4x"></i>
                                    </div>
                                    <h5 class="text-muted fw-bold">Clean Record</h5>
                                    <p class="text-muted small">No new deductions were applicable for the selected scope.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="card border-0 shadow-sm h-100 d-flex align-items-center justify-content-center bg-light text-center p-5" style="border-radius: 15px; border: 2px dashed #dee2e6 !important;">
                    <div class="opacity-50">
                        <i class="fas fa-robot fa-5x mb-4 text-primary"></i>
                        <h4 class="text-muted fw-bold">Ready to Analyze</h4>
                        <p class="text-muted" style="max-width: 400px;">Select a deduction type and scope on the left, then click run to process automation across the system.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .ls-1 {
        letter-spacing: 1px;
    }

    /* Custom Radio Cards */
    .btn-check:checked + .type-card {
        background-color: #f8f9fa !important;
        border-color: var(--primary-blue) !important;
        box-shadow: 0 0 0 2px var(--primary-blue);
    }

    .hover-lift {
        transition: transform 0.2s;
    }

        .hover-lift:hover {
            transform: translateY(-3px);
        }

    /* Input Transitions */
    .slide-input {
        animation: slideDown 0.3s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    function toggleInputs() {
        const val = document.getElementById('scopeSelect').value;

        document.getElementById('input-specific').style.display = 'none';
        document.getElementById('input-dept').style.display = 'none';

        if (val === 'Specific') document.getElementById('input-specific').style.display = 'block';
        else if (val === 'Department') document.getElementById('input-dept').style.display = 'block';
    }

    // Run on load to set correct state
    document.addEventListener('DOMContentLoaded', toggleInputs);
</script>