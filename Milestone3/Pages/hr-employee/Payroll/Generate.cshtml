@page
@model Milestone3.Pages.hr_employee.Payroll.GenerateModel
@{
    ViewData["Title"] = "Generate Payroll";
}

<div class="row">
    <!-- Generator Form -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-coins me-2"></i>New Payroll</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Employee ID</label>
                        <input type="number" asp-for="EmpId" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">From Date</label>
                        <input type="date" asp-for="FromDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Date</label>
                        <input type="date" asp-for="ToDate" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-cogs me-2"></i>Generate & Calculate
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Result Display -->
    <div class="col-md-8">
        @if (Model.GeneratedPayroll != null)
        {
            <div class="card shadow border-0 border-top border-success border-4">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3 class="text-success fw-bold">Payroll Generated</h3>
                        <p class="text-muted">Payment processed successfully</p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-uppercase text-muted">Final Salary</small>
                                <h2 class="text-dark fw-bold">$@Model.GeneratedPayroll["final_salary_amount"]</h2>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-uppercase text-muted">Payment Date</small>
                                <h4 class="text-dark">@Convert.ToDateTime(Model.GeneratedPayroll["payment_date"]).ToShortDateString()</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border p-2 rounded">
                                <small class="text-muted d-block">Bonus</small>
                                <strong class="text-success">+$@Model.GeneratedPayroll["bonus_amount"]</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border p-2 rounded">
                                <small class="text-muted d-block">Deductions</small>
                                <strong class="text-danger">-$@Model.GeneratedPayroll["deductions_amount"]</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border p-2 rounded">
                                <small class="text-muted d-block">Comments</small>
                                <span>@Model.GeneratedPayroll["comments"]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger mt-3">@Model.Message</div>
        }
        else
        {
            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-2"></i> Enter details to generate a monthly payroll record for an employee.
            </div>
        }
    </div>
</div>