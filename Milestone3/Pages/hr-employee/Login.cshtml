@page
@model Milestone3.Pages.hr_employee.LoginModel
@{
    Layout = null; /* No sidebar for login page */
}

<!DOCTYPE html>
<html>
<head>
    <title>HR Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/hr-employee-theme.css" />
    <style>
        .login-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--primary-blue);
        }
        .login-card {
            background: white;
            padding: 40px;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
            color: var(--primary-blue);
        }
    </style>
</head>
<body>

<div class="login-container">
    <div class="login-card">
        <div class="brand-logo">
            <h2><i class="fas fa-university"></i> HR Portal</h2>
            <p class="text-muted">Enter your credentials to access</p>
        </div>

        <form method="post">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger text-center">
                    @Model.ErrorMessage
                </div>
            }

            <div class="mb-3">
                <label class="form-label fw-bold">Employee ID</label>
                <input type="number" asp-for="EmployeeID" class="form-control" placeholder="e.g. 101" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="******" required />
            </div>

            <button type="submit" class="btn btn-primary-custom w-100 py-2">
                Secure Login
            </button>
        </form>
    </div>
</div>

</body>
</html>