@page
@model Milestone3.Pages.hr_employee.LoginModel
@{
    Layout = null; /* No sidebar for login page */
}

<!DOCTYPE html>
<html>
<head>
    <title>HR Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/hr-employee-theme.css" />
    <style>
        /* Shared Variables match Homepage/Theme */
        :root {
            --ocean-blue: #a6d3ff;
            --deep-navy: #003366;
        }

        .login-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            
            /* Deeper Gradient: Starts with homepage Ocean Blue (#a6d3ff) and deepens to Navy */
            background: linear-gradient(135deg, #a6d3ff 0%, #003366 100%);
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95); /* Slight transparency */
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 15px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            border: 1px solid rgba(255,255,255,0.8);
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
            color: var(--deep-navy);
        }
        
        .brand-logo i {
            font-size: 3rem;
            margin-bottom: 10px;
            background: -webkit-linear-gradient(45deg, var(--deep-navy), #0056b3);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #ced4da;
            background-color: #f8f9fa;
        }
        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(166, 211, 255, 0.5);
            border-color: var(--ocean-blue);
            background-color: #fff;
        }

        .btn-primary-custom {
            background-color: var(--deep-navy);
            color: white;
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .btn-primary-custom:hover {
            background-color: #002244; /* Even darker on hover */
            color: white; /* Added to prevent black text on hover */
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>

<div class="login-container">
    <div class="login-card">
        <div class="brand-logo">
            <i class="fas fa-users-cog"></i>
            <h2 class="fw-bold">HR Portal</h2>
            <p class="text-muted small">Please sign in to continue</p>
        </div>

        <form method="post">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger text-center shadow-sm border-0" style="font-size: 0.9rem;">
                    <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                </div>
            }

            <div class="mb-3">
                <label class="form-label fw-bold text-secondary small text-uppercase">Employee ID</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-id-badge text-muted"></i></span>
                    <input type="number" asp-for="EmployeeID" class="form-control border-start-0 ps-0" placeholder="e.g. 101" required />
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold text-secondary small text-uppercase">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-muted"></i></span>
                    <input type="password" asp-for="Password" class="form-control border-start-0 ps-0" placeholder="••••••" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary-custom w-100">
                Secure Login <i class="fas fa-arrow-right ms-2"></i>
            </button>
            
            <div class="text-center mt-4">
                <a href="/" class="text-decoration-none text-muted small hover-underline">
                    <i class="fas fa-home me-1"></i> Return to Homepage
                </a>
            </div>
        </form>
    </div>
</div>

</body>
</html>