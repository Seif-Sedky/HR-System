<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Milestone3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Milestone3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Milestone3</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="employeeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-badge"></i> Employee Portal
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="employeeDropdown">
                                <li><a class="dropdown-item" asp-page="/Employee2/Index"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Leave Applications</h6></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/ApplyAccidental"><i class="bi bi-calendar-x"></i> Accidental Leave</a></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/Leaves/ApplyMedical"><i class="bi bi-heart-pulse"></i> Medical Leave</a></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/Leaves/ApplyUnpaid"><i class="bi bi-cash-coin"></i> Unpaid Leave</a></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/Leaves/ApplyCompensation"><i class="bi bi-arrow-repeat"></i> Compensation Leave</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Approvals (Dean/President)</h6></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/Approvals/ApproveAnnualLeaves"><i class="bi bi-check-circle"></i> Annual Leaves</a></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/Approvals/ApproveUnpaidLeaves"><i class="bi bi-check-circle"></i> Unpaid Leaves</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Dean Functions</h6></li>
                                <li><a class="dropdown-item" asp-page="/Employee2/Evaluation/EvaluateEmployees"><i class="bi bi-clipboard-check"></i> Evaluate Employees</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Milestone3 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>