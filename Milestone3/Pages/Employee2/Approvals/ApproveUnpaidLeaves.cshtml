@page
@model Milestone3.Pages.Employee2.Approvals.ApproveUnpaidLeavesModel
@{
    ViewData["Title"] = "Approve Unpaid Leaves";
}

<div class="container mt-4">
    <h2 class="mb-4">
        Approve Unpaid Leave Requests
        @if (!string.IsNullOrEmpty(Model.UserRole))
        {
            <small class="text-muted">(@Model.UserRole)</small>
        }
    </h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        var alertClass = Model.MessageType switch
        {
            "success" => "success",
            "warning" => "warning",
            "info" => "info",
            _ => "danger"
        };
        <div class="alert alert-@alertClass alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.HasAccess)
    {
        <div class="alert alert-danger">
            <h5><i class="bi bi-exclamation-triangle"></i> Access Denied</h5>
            <p class="mb-0">You cannot access this page unless you are a Dean, Vice Dean, or President.</p>
        </div>
    }
    else if (Model.PendingRequests.Any())
    {
        <div class="row">
            @foreach (var request in Model.PendingRequests)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">
                                Request #@request.RequestId - @request.EmployeeName
                                <span class="badge bg-light text-dark float-end">@request.MyApprovalStatus</span>
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Employee ID:</strong> @request.EmployeeId
                                </div>
                                <div class="col-6">
                                    <strong>Department:</strong> @request.Department
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Request Date:</strong> @request.DateOfRequest.ToString("MMM dd, yyyy")
                                </div>
                                <div class="col-6">
                                    <strong>Duration:</strong> @request.NumDays day(s)
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong>Start Date:</strong> @request.StartDate.ToString("MMM dd, yyyy")
                                </div>
                                <div class="col-6">
                                    <strong>End Date:</strong> @request.EndDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <strong>Contract Type:</strong> 
                                    <span class="badge bg-@(request.ContractType == "full_time" ? "success" : "warning")">
                                        @request.ContractType
                                    </span>
                                </div>
                                <div class="col-6">
                                    <strong>Annual Balance:</strong> 
                                    <span class="badge bg-@(request.AnnualBalance == 0 ? "success" : "danger")">
                                        @request.AnnualBalance days
                                    </span>
                                </div>
                            </div>

                            <hr />

                            <div class="mb-3">
                                <strong>Documents (@request.Documents.Count):</strong>
                                @if (request.Documents.Any())
                                {
                                    <div class="mt-2">
                                        @foreach (var doc in request.Documents)
                                        {
                                            <div class="card mb-2">
                                                <div class="card-body p-2">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <i class="bi bi-file-earmark-text text-primary"></i>
                                                            <strong>@doc.FileName</strong>
                                                            @if (doc.CreationDate.HasValue)
                                                            {
                                                                <br />
                                                                <small class="text-muted">
                                                                    <i class="bi bi-calendar3"></i> @doc.CreationDate.Value.ToString("MMM dd, yyyy")
                                                                </small>
                                                            }
                                                        </div>
                                                        <span class="badge bg-secondary">@doc.Type</span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(doc.Description))
                                                    {
                                                        <small class="text-muted d-block mt-1">@doc.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert mt-2 mb-0">
                                        <small> No documents attached</small>
                                    </div>
                                }
                            </div>

                            <div class="alert alert-info mb-3">
                                <strong>Validation Checklist (Auto-checked by Procedure):</strong>
                                <ul class="mb-0 small">
                                    <li class="@(request.FinalStatus.ToLower() == "pending" ? "text-success" : "text-muted")">
                                        Request status is 'Pending'
                                    </li>
                                    <li class="@(request.Documents.Any(d => d.Type == "Memo") ? "text-success" : "text-danger")">
                                        Has Memo document (@request.Documents.Count(d => d.Type == "Memo") Memo(s))
                                    </li>
                                    <li class="@(request.ContractType != "part_time" ? "text-success" : "text-danger")">
                                        Employee is NOT part-time (@request.ContractType)
                                    </li>
                                    @if (!string.IsNullOrEmpty(request.EmployeeRole) && (request.EmployeeRole == "Dean" || request.EmployeeRole == "Vice Dean"))
                                    {
                                        <li class="@(!request.IsCounterpartOnLeave ? "text-success" : "text-danger")">
                                            @(request.EmployeeRole == "Dean" ? "Vice Dean" : "Dean") is NOT on leave during this period
                                        </li>
                                    }
                                </ul>
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle"></i> The stored procedure <code>Upperboard_approve_unpaids</code> validates these automatically
                                </small>
                            </div>

                            @if (request.MyApprovalStatus.ToLower() == "pending")
                            {
                                <div class="d-grid gap-2">
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="requestId" value="@request.RequestId" />
                                        <button type="submit" asp-page-handler="Approve" class="btn btn-success w-100 mb-2">
                                            <i class="bi bi-check-circle"></i> Automatic Approve / Reject
                                        </button>
                                    </form>
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="requestId" value="@request.RequestId" />
                                        <button type="submit" asp-page-handler="Reject" class="btn btn-danger w-100">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-secondary mb-0">
                                    Status: <strong>@request.MyApprovalStatus</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5><i class="bi bi-info-circle"></i> No Pending Requests</h5>
            <p class="mb-0">There are currently no unpaid leave requests pending your approval.</p>
        </div>
    }
</div>
