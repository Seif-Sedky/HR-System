@page
@model Milestone3.Pages.Employee2.Leaves.ApplyCompensationModel
@{
    ViewData["Title"] = "Apply for Compensation Leave";
}

<div class="container mt-4">
    <h2 class="mb-4">Apply for Compensation Leave</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@(Model.MessageType == "success" ? "success" : "danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="CompensationDate" class="form-label">Compensation Date (Day Off) <span class="text-danger">*</span></label>
                                <input type="date" asp-for="CompensationDate" class="form-control" required />
                                <small class="text-muted">The day you want to take off as compensation</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="OriginalWorkday" class="form-label">Original Workday Date <span class="text-danger">*</span></label>
                                <input type="date" asp-for="OriginalWorkday" class="form-control" required />
                                <small class="text-muted">Your official day off when you worked</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Reason" class="form-label">Reason <span class="text-danger">*</span></label>
                            <textarea asp-for="Reason" class="form-control" rows="3" 
                                      placeholder="Explain why you worked on your day off" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="ReplacementEmployeeId" class="form-label">Replacement Employee <span class="text-danger">*</span></label>
                            <select asp-for="ReplacementEmployeeId" class="form-select" required>
                                <option value="">-- Select Replacement --</option>
                                @foreach (var emp in Model.AvailableEmployees)
                                {
                                    <option value="@emp.EmployeeId">@emp.FullName (@emp.Status)</option>
                                }
                            </select>
                            <small class="text-muted">Select a colleague from your department who will cover your duties</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Employee2" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit Compensation Leave</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <h6><i class="bi bi-info-circle"></i> Compensation Leave Requirements:</h6>
                <ul class="mb-0">
                    <li>You must have worked at least 8 hours on your official day off</li>
                    <li>The original workday and compensation date must be in the same month</li>
                    <li>Replacement employee must be from the same department and not on leave</li>
                    <li>Requires HR approval</li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">Recent Attendance Records</h6>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.MyAttendanceRecords.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Hours</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.MyAttendanceRecords)
                                {
                                    <tr class="@(record.TotalHours >= 8 ? "table-success" : "")">
                                        <td>@record.Date.ToString("MMM dd")</td>
                                        <td>
                                            @if (record.TotalMinutes > 0)
                                            {
                                                <span>@record.TotalHours.ToString("F1")h</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-@(record.Status == "Attended" ? "success" : "secondary")">
                                                @record.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Green rows indicate 8+ hours worked
                        </small>
                    }
                    else
                    {
                        <p class="text-muted">No attendance records found</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
