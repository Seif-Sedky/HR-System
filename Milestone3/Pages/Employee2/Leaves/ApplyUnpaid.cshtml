@page
@model Milestone3.Pages.Employee2.Leaves.ApplyUnpaidModel
@{
    ViewData["Title"] = "Apply for Unpaid Leave";
}

<div class="container mt-4">
    <h2 class="mb-4">Apply for Unpaid Leave</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@(Model.MessageType == "success" ? "success" : "danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.CurrentEmployee != null)
    {
        <div class="alert alert-warning">
            <h6><i class="bi bi-exclamation-triangle"></i> Leave Balance Status:</h6>
            <ul class="mb-0">
                <li><strong>Annual Balance:</strong> @Model.CurrentEmployee.AnnualBalance days</li>
                <li><strong>Accidental Balance:</strong> @Model.CurrentEmployee.AccidentalBalance days</li>
                <li><strong>Contract Type:</strong> @Model.CurrentEmployee.ContractType</li>
            </ul>
            @if (Model.CurrentEmployee.AnnualBalance > 0)
            {
                <p class="mb-0 mt-2 text-danger"><strong>Note:</strong> You still have annual leave balance. Unpaid leave can only be requested when annual balance is zero.</p>
            }
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                        <input type="date" asp-for="StartDate" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="EndDate" class="form-label">End Date <span class="text-danger">*</span></label>
                        <input type="date" asp-for="EndDate" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="DocumentDescription" class="form-label">Memo Description <span class="text-danger">*</span></label>
                    <textarea asp-for="DocumentDescription" class="form-control" rows="4" 
                              placeholder="Provide detailed reason for unpaid leave request" required></textarea>
                    <small class="text-muted">A memo document is required for unpaid leave requests</small>
                </div>

                <div class="mb-3">
                    <label for="FileName" class="form-label">Memo File Name <span class="text-danger">*</span></label>
                    <input type="text" asp-for="FileName" class="form-control" 
                           placeholder="e.g., unpaid_leave_memo_2024.pdf" required />
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/Employee2" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Unpaid Leave</button>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <h6><i class="bi bi-info-circle"></i> Unpaid Leave Requirements:</h6>
        <ul class="mb-0">
            <li>Maximum duration: 30 days</li>
            <li>Only one unpaid leave allowed per year</li>
            <li>Annual balance must be zero</li>
            <li>Part-time employees are not eligible</li>
            <li>A memo document is mandatory</li>
        </ul>
    </div>
</div>
