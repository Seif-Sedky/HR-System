@page
@model ApplyAccidentalModel
@{
    ViewData["Title"] = "Apply for Accidental Leave";
}

<div class="container mt-4">
    <h2 class="mb-4">Apply for Accidental Leave</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@(Model.Message.Contains("Error") ? "danger" : "success") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                        <input type="date" asp-for="StartDate" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="EndDate" class="form-label">End Date <span class="text-danger">*</span></label>
                        <input type="date" asp-for="EndDate" class="form-control" required />
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/Employee2" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Accidental Leave</button>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <h6><i class="bi bi-info-circle"></i> Accidental Leave Requirements:</h6>
        <ul class="mb-0">
            <li>Maximum duration: 1 day only</li>
            <li>Must be submitted within 2 days after the leave date</li>
            <li>Requires sufficient accidental balance</li>
            <li>Requires HR approval</li>
        </ul>
    </div>

</div>
