@page
@model ApplyAccidentalModel

<h2>All Employees</h2>

@if (Model.Employees != null && Model.Employees.Any())
{
    <div class="table-responsive mb-4">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Years of Experience</th>
                    <th>Official Day Off</th>
                    <th>Contract Type</th>
                    <th>Employment Status</th>
                    <th>Annual Balance</th>
                    <th>Accidental Balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.EmployeeId</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Gender</td>
                        <td>@employee.Email</td>
                        <td>@employee.Address</td>
                        <td>@employee.YearsOfExperience</td>
                        <td>@employee.OfficialDayOff</td>
                        <td>@employee.TypeOfContract</td>
                        <td>@employee.EmploymentStatus</td>
                        <td>@employee.AnnualBalance</td>
                        <td>@employee.AccidentalBalance</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="alert alert-info">No employees found.</p>
}

<hr />

<h2>Apply for Accidental Leave</h2>

<form method="post">
    <label>Start Date:</label>
    <input type="date" asp-for="StartDate" class="form-control" />

    <label>End Date:</label>
    <input type="date" asp-for="EndDate" class="form-control" />

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

@if (Model.Message != null)
{
    <p class="text-success">@Model.Message</p>
}
