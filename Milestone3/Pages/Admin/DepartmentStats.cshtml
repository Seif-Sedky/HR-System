@page
@model Milestone3.Pages.Admin.DepartmentStatsModel

<div class="container text-center">
    <h2 class="my-4">Employees per Department</h2>

    @if (Model.Stats != null && Model.Stats.Rows.Count > 0)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Department Name</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.Stats.Rows)
                        {
                            <tr>
                                <td>@row["Department"]</td>
                                <td>@row["Number of Employees"]</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No department data found.</div>
    }
    
    <br />
    <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
</div>