@page
@model Milestone3.Pages.Admin.AddHolidayModel

<div class="container" style="margin-top: 50px;">
    <h2 class="text-center">Add Official Holiday</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <div class="card p-4 mx-auto" style="max-width: 500px;">
        <form method="post">
            <div class="form-group mb-3">
                <label>Holiday Name:</label>
                <input type="text" name="holidayName" class="form-control" placeholder="e.g. Labor Day" required />
            </div>

            <div class="form-group mb-3">
                <label>Start Date:</label>
                <input type="date" name="startDate" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>End Date:</label>
                <input type="date" name="endDate" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Add Holiday</button>
        </form>
    </div>
    
    <div class="text-center mt-3">
         <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div>