
@page
@model Milestone3.Pages.Admin.AttendanceYesterdayModel

<h2>Attendance for Yesterday</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Attendance ID</th>
            <th>Employee ID</th>
            <th>Date</th>
            <th>Check-In Time</th>
            <th>Check-Out Time</th>
            <th>Total Duration (minutes)</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AttendanceData != null && Model.AttendanceData.Rows.Count > 0)
        {
            foreach (System.Data.DataRow row in Model.AttendanceData.Rows)
            {
                <tr>
                    <td>@row["attendance_ID"]</td>
                    <td>@row["emp_ID"]</td>
                    <td>@String.Format("{0:dd-MM-yyyy}", row["date"])</td>
                    <td>@row["check_in_time"]</td>
                    <td>@row["check_out_time"]</td>
                    <td>@row["total_duration"]</td>
                    <td>@row["status"]</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No records found for yesterday.</td>
            </tr>
        }
    </tbody>
</table>