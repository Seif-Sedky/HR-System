@page
@model Milestone3.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="dashboard-container">

    <div class="dashboard-header mb-5">
        <div>
            <h1 class="display-6 fw-bold text-uni-blue">Welcome, Admin</h1>
            <p class="text-muted">Here is your daily overview for @DateTime.Now.ToString("dddd, MMMM dd, yyyy").</p>
        </div>
        <div class="header-actions">
            <span class="badge bg-uni-blue p-2">System Active</span>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-md-6 col-lg-4">
            <div class="dash-card card-blue h-100">
                <div class="card-body">
                    <div class="icon-wrapper bg-blue-light mb-3">
                        👥
                    </div>
                    <h5 class="card-title fw-bold">Employees</h5>
                    <p class="card-text text-muted small">View staff details and department distribution.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-page="/Admin/ViewProfiles" class="btn btn-outline-uni-blue btn-sm">View All Profiles</a>
                        <a asp-page="/Admin/DepartmentStats" class="btn btn-outline-uni-blue btn-sm">Department Stats</a>
                        <a asp-page="/Admin/EmployeePerformance" class="btn btn-outline-uni-blue btn-sm">Employee Performance in Winter Semesters</a>
                        <a asp-page="/Admin/ReplaceEmployee" class="btn btn-outline-uni-blue btn-sm">Replace Employee</a>
                        <a asp-page="/Admin/UpdateEmploymentStatus" class="btn btn-outline-uni-blue btn-sm">Update Employment Status</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="dash-card card-green h-100">
                <div class="card-body">
                    <div class="icon-wrapper bg-green-light mb-3">
                        ⏱️
                    </div>
                    <h5 class="card-title fw-bold">Attendance</h5>
                    <p class="card-text text-muted small">Manage daily logs and check-in times.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-page="/Admin/UpdateAttendance" class="btn btn-outline-uni-green btn-sm">Update Records</a>
                        <a asp-page="/Admin/AttendanceYesterday" class="btn btn-outline-uni-green btn-sm">Yesterday Attendance</a>
                        <a asp-page="/Admin/RemoveHoliday" class="btn btn-outline-uni-green btn-sm">Remove Attendacne Records in Official Holiday</a>
                        <a asp-page="/Admin/RemoveDayOff" class="btn btn-outline-uni-green btn-sm">Remove Attendance Records in DayOff</a>
                        <a asp-page="/Admin/RemoveApprovedLeaves" class="btn btn-outline-uni-green btn-sm">Remove Attendance Records for Approved Leaves</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="dash-card card-red h-100">
                <div class="card-body">
                    <div class="icon-wrapper bg-red-light mb-3">
                        ⚠️
                    </div>
                    <h5 class="card-title fw-bold">Critical Actions</h5>
                    <p class="card-text text-muted small">Handle penalties and rejected requests.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-page="/Admin/RemoveDeductions" class="btn btn-outline-uni-red btn-sm">Clear Resigned Deductions</a>
                        <a asp-page="/Admin/RejectedMedicalLeaves" class="btn btn-outline-uni-red btn-sm">Rejected Leaves</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="dash-card card-gold h-100">
                <div class="card-body">
                    <div class="icon-wrapper bg-gold-light mb-3">
                        📅
                    </div>
                    <h5 class="card-title fw-bold">Organization</h5>
                    <p class="card-text text-muted small">Manage official holidays and settings.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-page="/Admin/AddHoliday" class="btn btn-outline-uni-gold btn-sm">Add Official Holiday</a>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>