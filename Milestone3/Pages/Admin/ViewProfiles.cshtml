@page
@model Milestone3.Pages.Admin.ViewProfilesModel

<div class="container">
    <h2 class="text-center my-4">All Employee Profiles</h2>

    @if (Model.Employees != null && Model.Employees.Rows.Count > 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Employees.Rows)
                {
                    <tr>
                        <td>@row["employee_id"]</td>
                        <td>@row["first_name"]</td>
                        <td>@row["last_name"]</td>
                        <td>@row["dept_name"]</td>
                        <td>@row["email"]</td>
                        <td>@row["employment_status"]</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No employees found in the database.
        </div>
    }
</div>