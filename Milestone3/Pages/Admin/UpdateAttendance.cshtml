@page
@model Milestone3.Pages.Admin.UpdateAttendanceModel

<div class="container" style="margin-top: 50px;">
    <h2 class="text-center">Update Employee Attendance</h2>
    <p class="text-center text-muted">Set check-in/out times for Today.</p>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <div class="card p-4 mx-auto" style="max-width: 500px;">
        <form method="post">
            <div class="form-group mb-3">
                <label>Employee ID:</label>
                <input type="number" name="employeeId" class="form-control" placeholder="e.g. 1" required />
            </div>

            <div class="form-group mb-3">
                <label>Check-in Time:</label>
                <input type="time" name="startTime" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>Check-out Time:</label>
                <input type="time" name="endTime" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Attendance</button>
        </form>
    </div>
    
    <div class="text-center mt-3">
         <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div>